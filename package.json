{
  "name": "bitcoin-faucet",
  "version": "0.0.1",
  "description": "Bitcoin faucet service.",
  "author": "Fomichev Kirill <fanatid@ya.ru>",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:fanatid/bitcoin-faucet.git"
  },
  "bugs": {
    "url": "https://github.com/fanatid/bitcoin-faucet/issues"
  },
  "license": "MIT",
  "keywords": [
    "bitcoin",
    "mainnet",
    "testnet3",
    "faucet"
  ],
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run-script compile && npm run-script uglify",
    "compile": "browserify lib/index.js -s faucet -o faucet.js",
    "compile_test": "browserify test/*.js -o faucet.test.js",
    "coverage": "istanbul cover _mocha -- test/*.js",
    "coveralls": "npm run-script coverage && coveralls <coverage/lcov.info",
    "clean": "rm -f faucet.js faucet.min.js faucet.test.js",
    "lint": "standard",
    "uglify": "uglify -s faucet.js -o faucet.min.js",
    "test": "istanbul test mocha -- --reporter spec test/*.js"
  },
  "dependencies": {
    "bip39": "^2.1.0",
    "bitcore": "^0.11.4",
    "js-yaml": "^3.2.7",
    "lodash": "^3.5.0",
    "nedb": "^1.1.1",
    "winston": "^0.9.0",
    "yargs": "^3.5.4"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "chai": "^2.1.1",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.7",
    "mocha": "^2.2.0",
    "standard": "^2.10.0",
    "uglify": "^0.1.1"
  },
  "browser": {},
  "standard": {
    "ignore": [
      "faucet.js",
      "faucet.min.js",
      "faucet.test.js"
    ]
  }
}
